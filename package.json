{
  "name": "outlook-for-linux",
  "version": "0.2.0",
  "main": "app/index.js",
  "description": "Unofficial client for Microsoft outlook for Linux",
  "homepage": "https://github.com/noizo/outlook-for-linux",
  "keywords": [
    "outlook",
    "Microsoft outlook"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://github.com/noizo/outlook-for-linux"
  },
  "author": "Ivelin Velkov <ivelin.velkov@gmail.com>",
  "license": "SEE LICENSE IN LICENSE.md",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "lint": "eslint **/*.js",
    "start": "yarn install && electron ./app",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:linux": "electron-builder --linux",
    "dist:linux:appimage": "electron-builder --linux AppImage",
    "dist:linux:snap": "electron-builder --linux snap",
    "release": "electron-builder"
  },
  "dependencies": {
    "electron-editor-context-menu": "^1.1.1",
    "electron-native-notification": "^1.2.1",
    "electron-spell-check-provider": "^1.1.1",
    "electron-window-state": "^5.0.3",
    "yargs": "^13.2.2"
  },
  "devDependencies": {
    "electron": "^4.0.7",
    "electron-builder": "^20.38.5",
    "eslint": "^5.15.1",
    "yarn": "^1.13.0"
  },
  "build": {
    "appId": "outlook-for-linux",
    "linux": {
      "category": "Network;Chat",
      "packageCategory": "net",
      "executableName": "outlook",
      "synopsis": "Microsoft Outlook for Linux",
      "description": "Unofficial Microsoft Outlook client for Linux using Electron. It uses the Web App and wraps it as a standalone application using Electron.",
      "desktop": {
        "Name": "Microsoft outlook for Linux",
        "Comment": "Unofficial client for Microsoft Outlook for Linux",
        "StartupWMClass": "outlook-for-linux"
      },
      "target": [
        "rpm",
        "deb",
        "tar.gz",
        "snap",
        "AppImage",
        "pacman"
      ],
      "mimeTypes": [
        "application/sip"
      ],
      "publish": {
        "provider": "github",
        "releaseType": "draft"
      }
    },
    "snap": {
      "synopsis": "Unofficial Microsoft Outlook client for Linux using Electron. It uses the Web App and wraps it as a standalone application using Electron.",
      "confinement": "strict",
      "grade": "devel",
      "buildPackages": [],
      "stagePackages": [
        "default"
      ],
      "plugs": [
        "default",
        "camera"
      ]
    }
  }
}
