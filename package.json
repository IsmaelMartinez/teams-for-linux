{
  "name": "teams-bmw",
  "version": "1.12.5",
  "main": "app/index.js",
  "description": "Unofficial client for Microsoft Teams BMW",
  "homepage": "https://github.com/SlyOrion/teams-for-linux",
  "keywords": [
    "Teams",
    "Microsoft Teams"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://github.com/SlyOrion/teams-for-linux"
  },
  "author": {
    "name": "Ismael Martinez",
    "email": "ismaelmartinez@gmail.com",
    "url": "https://github.com/IsmaelMartinez/"
  },
  "license": "GPL-3.0-or-later",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "lint": "eslint **/*.js",
    "prestart": "npm ci",
    "start": "electron ./app --trace-warnings",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:linux": "electron-builder --linux",
    "dist:linux:deb": "electron-builder --x64 --armv7l --arm64 -l deb",
    "dist:linux:appimage": "electron-builder --x64 --armv7l --arm64 -l AppImage",
    "dist:linux:x64": "electron-builder --x64 -l deb AppImage",
    "release": "electron-builder"
  },
  "dependencies": {
    "@homebridge/dbus-native": "0.6.0",
    "electron-log": "^5.2.4",
    "electron-store": "8.2.0",
    "electron-window-state": "5.0.3",
    "lodash": "^4.17.21",
    "node-sound": "^0.0.8",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@electron/fuses": "^1.8.0",
    "@eslint/js": "^9.17.0",
    "electron": "^33.3.0",
    "electron-builder": "^25.1.8",
    "eslint": "^9.17.0",
    "globals": "^15.14.0",
    "http-server": "^14.1.1"
  },
  "build": {
    "appId": "teams-bmw",
    "asarUnpack": [
      "node_modules/spellchecker/vendor/hunspell_dictionaries"
    ],
    "protocols": {
      "name": "msteams",
      "schemes": [
        "msteams"
      ]
    },
    "extraResources": [
      {
        "from": "app/assets/sounds",
        "to": "assets/sounds"
      }
    ],
    "linux": {
      "category": "Chat;Network;Office",
      "packageCategory": "net",
      "executableName": "teams-bmw",
      "synopsis": "Teams BMW",
      "description": "Unofficial Microsoft Teams client for Linux using Electron. It uses the Web App and wraps it as a standalone application using Electron.",
      "desktop": {
        "Name": "Teams BMW",
        "Comment": "Unofficial client for Microsoft Teams BMW",
        "StartupWMClass": "teams-bmw"
      },
      "target": [
        "deb",
        "AppImage"
      ],
      "publish": {
        "provider": "github",
        "releaseType": "draft"
      }
    },
    "afterPack": "scripts/afterpack.js"
  }
}